pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(branches: [[name: 'refs/tags/develop-*']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/adriandy89/learn-jenkins-app.git']])
            }
        }

        stage('Validate Build Type') {
            steps {
                script {
                    def tagName = env.TAG_NAME ?: env.BRANCH_NAME
                    
                    echo "Current reference: ${tagName}"
                    
                    if (tagName == null) {
                        error "No valid tag or branch detected. Aborting pipeline."
                    }
                    
                    if (!buildingTag() || !tagName.toString().startsWith("develop-")) {
                        error "This pipeline only runs for 'develop-*' tags. Stopping execution."
                    }
                    
                    echo "Valid develop-* tag detected. Continuing with pipeline."
                }
            }
        }

        stage('Info') {
            steps {
                echo "Estamos construyendo la referencia: ${env.TAG_NAME ?: env.BRANCH_NAME}"
                script {
                    if (buildingTag()) {
                        echo "Es un TAG"
                    } else {
                        echo "Es una rama (branch)"
                    }
                }
            }
        }

        stage('Deploy segun tipo') {
            steps {
                script {
                    def tagName = env.TAG_NAME ?: env.BRANCH_NAME
                    
                    if (buildingTag()) {
                        if (tagName?.startsWith("develop-")) {
                            echo "Desplegando un tag de desarrollo: ${tagName}"
                            // Aquí pones tus pasos para 'develop-'
                        } else if (tagName?.startsWith("production-")) {
                            echo "Desplegando un tag de producción: ${tagName}"
                            // Aquí pones tus pasos para 'production-'
                        } else {
                            echo "Es un tag, pero no empieza con develop- ni production-"
                        }
                    } else {
                        echo "Es una rama, no un tag. Comportamiento diferente (si lo deseas)."
                    }
                }
            }
        }
    }

    post {
        failure {
            echo "Build failed! Check the logs for more information."
        }
        success {
            echo "Build completed successfully!"
        }
    }
}