pipeline {
    agent any

    stages {
        // stage('Checkout') {
        //     steps {
        //         checkout scmGit(branches: [[name: '*/develop-*']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/adriandy89/learn-jenkins-app.git']])
        //     }
        // }

        stage('Info') {
            steps {
                echo "Estamos construyendo la referencia: ${env.BRANCH_NAME}"
                script {
                    if (buildingTag()) {
                        echo "Es un TAG"
                    } else {
                        echo "Es una rama (branch)"
                    }
                }
            }
        }

        stage('Deploy segun tipo') {
            steps {
                script {
                    if (buildingTag()) {
                        if (env.BRANCH_NAME.startsWith("develop-")) {
                            echo "Desplegando un tag de desarrollo: ${env.BRANCH_NAME}"
                            // Aquí pones tus pasos para 'develop-'
                        } else if (env.BRANCH_NAME.startsWith("production-")) {
                            echo "Desplegando un tag de producción: ${env.BRANCH_NAME}"
                            // Aquí pones tus pasos para 'production-'
                        } else {
                            echo "Es un tag, pero no empieza con develop- ni production-"
                        }
                    } else {
                        echo "Es una rama, no un tag. Comportamiento diferente (si lo deseas)."
                    }
                }
            }
        }
    }
}
