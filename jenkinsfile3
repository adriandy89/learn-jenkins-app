pipeline {
    agent any
    stages {
        stage('Check') {
            steps {
                script {
                    if (buildingTag()) {
                        echo "Esto es un tag: ${env.BRANCH_NAME}"

                        if (env.BRANCH_NAME.startsWith('develop-')) {
                            echo "Despliegue para develop"
                            // ...
                        } else if (env.BRANCH_NAME.startsWith('production-')) {
                            echo "Despliegue para producci√≥n"
                            // ...
                        }
                    } else {
                        echo "Es una rama (no un tag)."
                    }
                }
            }
        }
    }
}
